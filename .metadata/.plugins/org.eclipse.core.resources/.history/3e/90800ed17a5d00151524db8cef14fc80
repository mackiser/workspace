package cashRegister;
import java.util.Scanner;
public class cashRegister {
	
	/*
	 * Author: Mac Kiser
	 * Date: 9/17/15
	 * Program returns the amount of change the user should receive
	 */

	public static void main(String[] args) {
		
		Scanner keyboard = new Scanner(System.in);
		
		System.out.print("What is the total cost of the items? ");
		double totalCost = keyboard.nextDouble();
		
		System.out.print("Amount paid? ");
		double amountPaid = keyboard.nextDouble();
		
		double changeBack = amountPaid - totalCost;
		
		double twentiesAmount = changeBack % 20;
		changeBack = changeBack - twentiesAmount * 20;
		
		double tensAmount = changeBack % 10;
		changeBack = changeBack - tensAmount * 10;
		
		double fivesAmount = changeBack % 5;
		changeBack = changeBack - fivesAmount * 5;
		
		double onesAmount = changeBack / 1;
		changeBack = changeBack - onesAmount * 1;
		
		System.out.printf("\nChange: %.2f", changeBack);
		System.out.println("\nTwenties:" + twentiesAmount);
		System.out.println("Tens:" + tensAmount);
		System.out.println("Fives:" + fivesAmount);
		System.out.println("Ones: " + onesAmount);
		
		
		

	}

}
